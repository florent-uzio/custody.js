{
  "name": "custody",
  "version": "0.0.1",
  "description": "An SDK to interact with the Ripple Custody API",
  "keywords": [
    "Ripple Custody",
    "Custody"
  ],
  "license": "MIT",
  "author": "Florent Uzio",
  "homepage": "https://github.com/florent-uzio/custody.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/florent-uzio/custody.js"
  },
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "ci": "npm run build && npm run check-format && npm run check-exports && npm run lint && npm run test",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "check-format": "prettier --check .",
    "dev": "vitest",
    "format": "prettier --write .",
    "sort-package": "npx sort-package-json",
    "test": "vitest run"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "dotenv": "^16.4.7",
    "qs": "^6.14.0",
    "uuid": "^11.1.0",
    "xrpl": "^4.2.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.1",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "vitest": "^3.1.4"
  }
}
